{
  "name": "tejasvisoi-portfolio-dashboard",
  "version": "1.0.0",
  "description": "Desktop dashboard for Tejasvi Soi's portfolio management",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:dmg": "electron-builder --mac dmg",
    "dist": "npm run build:dmg"
  },
  "keywords": [
    "portfolio",
    "dashboard",
    "electron",
    "desktop"
  ],
  "author": "Tejasvi Soi",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "electron-store": "^8.1.0",
    "simple-git": "^3.20.0"
  },
  "build": {
    "appId": "com.tejasvisoi.portfolio-dashboard",
    "productName": "Tejasvi Soi Portfolio Dashboard",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "renderer.js",
      "index.html",
      "styles.css",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "dmg": {
      "title": "Tejasvi Soi Portfolio Dashboard",
      "window": {
        "width": 540,
        "height": 380
      }
    }
  }
} 